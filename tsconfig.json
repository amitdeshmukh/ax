{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "NodeNext",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build/module",
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@ax-llm/*": ["src/*"]
    }
  },
  "exclude": ["node_modules/**", "dist/**", "src/*/dist/**", "src/**/*.test.ts"]
}
